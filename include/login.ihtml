<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<html>
    <head>
        <title>Centreon - IT & Network Monitoring</title>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
        <meta name="Generator" content="Centreon - Copyright (C) 2005 - 2015 Open Source Matters. All rights reserved." />
        <meta name="robots" content="index, nofollow" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
        <link rel="shortcut icon" href="./img/favicon.ico">
		
		<!--Import CSS & Javascript-->

	<link href="./modules/mobile-UI/css/default/jquery.mobile-1.4.5.min.css" rel="stylesheet" type="text/css" />
	<link href="./modules/mobile-UI/css/style-mobile.css" rel="stylesheet" type="text/css"/>	

	<script src="./modules/mobile-UI/include/js/jquery-1.11.1.min.js"></script>
	<script src="./modules/mobile-UI/include/js/mobile-UI.js"></script>
	<script src="./modules/mobile-UI/include/js/jquery.mobile-1.4.5.min.js"></script>
	
	<meta name="mobile-web-app-capable" content="yes">
	<meta name="apple-mobile-web-app-capable" content="yes" />
	<meta name="apple-mobile-web-app-status-bar-style" content="black" />
		
    </head>
    <body OnLoad="document.login.useralias.focus();">
        <div data-role="page">
			<div data-role="header">
				<table width="100%">
					<tr width="100%">
						<td style="text-align:left; width:15%;">
							<font size="1">{$centreonVersion}</font>
						</td>
						<td style="width:68%; text-align:center">
							<img src="modules/mobile-UI/include/img/centreon_med.png" align="center">
						</td>
						<td style="text-align:right; width:30%;">
							<font size="1">{$currentDate}</font>
						</td>
					</tr>
				</table>
			</div>
					
			<div data-role="content">

				<font size="2">
					<table width="100%">
						<tr>
						<td width="1%"></td>
						<td style="text-align:center; width:98%">Smartphones</td>
						<td width="1%"></td>
						</tr>
					</table>
				</font>
				
				{foreach from=$loginMessages item=message}
					<div style='padding-top: 60px;'><span class='msg'>{$message}</span></div>
				{/foreach}
			
				<form action="./index.php?p=10" method="post" name="login">
					<div style='text-align:center;align:center;padding-top:90px;'>
						<table id="logintab1" style="text-align:center;" align="center">
							<tr>
								<td colspan="2">
									<table id="logintab2">
										<tr>
											<td align='right'>
												{$form.useralias.label}
											</td>
											<td>
												{$form.useralias.html}
											</td>
										</tr>
										<tr>
											<td align='right'>
												{$form.password.label}
											</td>
											<td>
												{$form.password.html}
											</td>
										</tr>
										<tr>
											<td colspan="2" align='center'>
												{$form.submitLogin.html}
											</td>
										</tr>
									</table>
								</td>
							</tr>
							<tr>
								<td id="LoginInvitcpy" colspan="2">
									<br />
									&copy; 2005-2015 <a href="mailto:infos@centreon.com">Centreon</a>
								</td>
							</tr>
						</table>
					</div>
					{$form.hidden}
				</form>
			</div>
		</div>
    </body>
</html>
